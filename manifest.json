{
    "manifest_version": 3,
    "version": "0.1.1",
    "name": "Super Snippet",
    "author": "J.Morta",
    "description": "Create a custom snippet",
    "permissions": ["tabs","storage", "activeTab", "scripting"],
    "background": {
        "js": ["background.js"]
    },
    "content_scripts":[
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["content.js"],
            "css": ["style.css"]
        }
    ],

    "action": {
        "default_popup": "popup.html",
        "default_title": "Super Snippet"
       
    },
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }


    
}